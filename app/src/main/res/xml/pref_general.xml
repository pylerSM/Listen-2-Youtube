<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="SEARCH_ONLY_MUSIC_VIDEO"
        android:summary="Enabled to filter search result with music category in youtube."
        android:title="Only search on music category" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="IS_AUTO_PLAY"
        android:summary="Auto play next related video in youtube one by one."
        android:title="Auto play" />

    <!--<SwitchPreference-->
    <!--android:defaultValue="true"-->
    <!--android:key="IS_REPEAT"-->
    <!--android:title="Play repeat" />-->

    <!--<SwitchPreference-->
    <!--android:defaultValue="true"-->
    <!--android:key="IS_SHUFFLE"-->
    <!--android:title="Play shuffle" />-->

    <EditTextPreference
        android:capitalize="none"
        android:key="DOWNLOAD_FOLDER"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Music download folder" />
    <EditTextPreference
        android:capitalize="none"
        android:key="DOWNLOAD_FOLDER_FOR_VIDEO"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Video download folder" />
    <EditTextPreference
        android:defaultValue="100"
        android:dialogMessage="Value between 0 and 100"
        android:dialogTitle="Set volume level"
        android:digits="0123456789"
        android:key="volume"
        android:numeric="integer"
        android:summary="100"
        android:title="Default volume level" />
    <ListPreference
        android:defaultValue="@string/default_download_choice"
        android:dialogTitle="Set default download selection"
        android:entries="@array/download_choices"
        android:entryValues="@array/download_choices"
        android:key="download_choice"
        android:title="Download selection" />
</PreferenceScreen>
